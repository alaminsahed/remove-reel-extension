{
  "manifest_version": 3,
  "name": "Hide Reels and Shorts",
  "version": "1.0",
  "description": "An extension to hide Reels and Shorts from your feed.",
  "icons": {
    "16": "icons/icon3.png",
    "48": "icons/icon2.png",
    "128": "icons/icon1.png"
  },
  "action": {
    "default_icon": "icons/icon1.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/*", "*://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
